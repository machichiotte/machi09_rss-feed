{
    "name": "kognit-service",
    "version": "1.0.0",
    "description": "Kognit Service - Backend API for RSS aggregation and AI sentiment analysis processing.",
    "main": "dist/index.js",
    "type": "module",
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "build": "tsc && tsc-alias",
        "start": "node dist/index.js",
        "test": "vitest",
        "lint": "eslint src",
        "lint:complexity": "eslint src --max-warnings=0",
        "format": "prettier --write src/**/*.ts",
        "create-indexes": "tsx src/scripts/create_indexes.ts"
    },
    "keywords": [
        "nodejs",
        "typescript",
        "express",
        "mongodb",
        "ai",
        "sentiment-analysis",
        "transformers-js",
        "rss-feed",
        "automation",
        "cron-jobs",
        "rest-api"
    ],
    "author": "machichiotte",
    "license": "MIT",
    "dependencies": {
        "@mozilla/readability": "^0.6.0",
        "@xenova/transformers": "^2.17.2",
        "axios": "^1.13.2",
        "cheerio": "^1.1.2",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.18.2",
        "helmet": "^7.1.0",
        "jsdom": "^28.0.0",
        "mongodb": "^6.3.0",
        "node-cron": "^3.0.3",
        "rss-parser": "^3.13.0",
        "sharp": "^0.34.5",
        "winston": "^3.11.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.2",
        "@types/axios": "^0.14.4",
        "@types/cheerio": "^1.0.0",
        "@types/cors": "^2.8.17",
        "@types/express": "^5.0.1",
        "@types/jsdom": "^27.0.0",
        "@types/mozilla-readability": "^0.2.1",
        "@types/node": "^22.19.3",
        "@types/node-cron": "^3.0.11",
        "@typescript-eslint/eslint-plugin": "^8.50.0",
        "@typescript-eslint/parser": "^8.50.0",
        "eslint": "^9.10.0",
        "prettier": "^3.3.3",
        "tsc-alias": "^1.8.10",
        "tsx": "^4.7.0",
        "typescript": "^5.5.4",
        "vitest": "^2.1.2"
    },
    "pnpm": {
        "onlyBuiltDependencies": [
            "sharp"
        ]
    }
}